<!-- Article preview for generated post. -->
<form action="/articlepreview" method="post" >
  <div class="form-group">
    <label for="title">Title for the post:</label>
    <input type="text" class="form-control" name="title" id="title" value="">
  </div>
  <div class="form-group">
    <label for="author">Author of the post</label>
    <input type="text" class="form-control" name="author" id="author" value="" disabled>
  </div>
  <div class="form-group">
    <label for="generatedPost">Generated post</label>
    <textarea class="form-control" name="generatedPost" id="generatedPost" rows="6" readonly></textarea>
  </div>
  <button class="btn btn-sm btn-dark" type="submit" id="submitArticle">Submit</button>
  <button class="btn btn-sm btn-dark" id="cancelBtn">Cancel</button>
</form>
