<div class="row">
<div class="col">
<h1 class="my-4">Posts
</h1>
</div>
</div>
<div id="middle">
{{#if isArticles}}
  <div class="row">
  {{#each articles}}
    {{> article}}
  {{/each}}
  </div>
</div>
<div class="row">
  <div class="col">
    <nav aria-label="...">
      <ul class="pagination justify-content-left">
        {{#compare prevPage "===" 0}}
        {{else}}
        <li class="page-item">
          <a class="page-link text-secondary" href="/{{prevPage}}">Previous</a>
        </li>
        {{/compare}}
        {{#compare prevPage "===" 0}}
        {{else}}
        <li class="page-item"><a class="page-link text-secondary" href="/{{prevPage}}">{{prevPage}}</a></li>
        {{/compare}}
        <li class="page-item">
          <span class="page-link bg-dark text-white">
            {{curPage}}
            <span class="sr-only">(current)</span>
          </span>
        </li>
        {{#compare nextPage ">" maxPages}}
        {{else}}
        <li class="page-item"><a class="page-link text-secondary" href="/{{nextPage}}">{{nextPage}}</a></li>
        <li class="page-item">
          <a class="page-link text-secondary" href="/{{nextPage}}">Next</a>
        </li>
        {{/compare}}
      </ul>
    </nav>
  </div>
</div>
{{else}}
  <p class="text-center">You have not created articles yet.</p>
{{/if}}
