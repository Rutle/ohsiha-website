<section class="intro">
  <div class="row">
    <div class="col">

      {{#if userIsLogged}}
        <h1 class="h3 mb-3 font-weight-normal">You are already logged in. Please <a href="/logout">log out</a> first.</h1>
      {{else}}
      <form action="/signup" method="post" class="form-signin">
        <h2 class="mb-3 font-weight-normal">Please sign up</h2>
      {{#if success}}
        {{else}}
        <div class="alert alert-danger">{{message}}</div>
        {{/if}}
        <input type="text" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>
        <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>
        <div class="row">
  				<div class="col-xs-4 col-sm-4 col-md-4">
  					<div class="form-group">
              <input type="text" name="fname" id="first_name" class="form-control input-sm" placeholder="First Name" required>
  					</div>
  				</div>
  				<div class="col-xs-8 col-sm-8 col-md-8">
  					<div class="form-group">
  						<input type="text" name="lname" id="last_name" class="form-control input-sm" placeholder="Last Name" required>
  					</div>
  				</div>
  			</div>
        <button class="btn btn-lg btn-dark btn-block" type="submit">Sign up</button>

        <p class="mt-5 mb-3 text-muted">Already have an account? Log in <a href="/login">here.</a></p>
        <p class="text-muted">Alternatively login or register with: </p><a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>
      </form>
      {{/if}}
    </div>
  </div>

</section>
