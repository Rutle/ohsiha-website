<div class="row justify-content-center">
  <div class="col-lg-8">

    <!-- Title -->
    <h1 class="mt-4">{{title}}</h1>

    <!-- Author -->
    <p class="lead">
      by
      <a href="#">{{user.twitter.displayName}}</a>
    </p>

    <hr>

    <!-- Date/Time -->
    <p>{{dateCreated}}</p>

    <hr>

    <!-- Post Content -->
    <p class="lead">{{blogPost}}</p>

    <hr>

  </div>
</div>
